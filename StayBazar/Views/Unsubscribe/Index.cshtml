@model StayBazar.Models.UnSubscribeModel
@using CaptchaMvc.HtmlHelpers
@{
    ViewBag.Title = "Unsubscribe";
}

<div class="container bdy_min_height">
    <div class="row  margin10px">
        <div class="col-md-12  "><h2>@ViewBag.Title</h2></div>
        <div class="row ">
            <div class="col-md-12" style="margin-left:18px">
                Provide your Email Id  to unsubscribe  from  news letter subscription list.
            </div>
        </div>
        <br />
        @using (Html.BeginForm("UnSubscribed", "UnSubscribe", FormMethod.Post, new { @id = "frmFilters" }))
        {
            <div class="row ">                
                <div class="col-md-4 col-md-offset-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Mailaddress)<span style="color:red">*</span>
                        @Html.TextBoxFor(m => m.Mailaddress, new { @tabindex = "2", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Mailaddress)
                    </div>
                </div>
            </div>
            <div class="row ">
                <div class="col-md-4 col-md-offset-4">
                    <div class="form-group">
                        @Html.Captcha("try another", "enter the text you see above:", 5, "is required field", true)
                    </div>
                    <div class="btn-toolbar">
                        <div class="btn-group submitctr">
                            <input type="submit" id="btnSave" value="Un Subscribe" class="btn btn-default" tabindex="18" />
                            <a href="~/UnSubscribe/index" id="btnReset" class="btn btn-danger" tabindex="19">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
<script type="text/javascript">
    $(function () {
        $("#Mailaddress").focus();
        $("#CaptchaInputText").attr("tabindex", "17");
    });
</script>