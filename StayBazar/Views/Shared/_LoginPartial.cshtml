@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @*@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Profile", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })*@
                <a href="/Account/Profile?userid=@(User.Identity.GetUserId().ToString())" title="Profile">Hello @User.Identity.GetUserName()</a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li class="dropdown">
            <a href="/Join" id="registerLink" class="dropdown-toggle" data-toggle="dropdown">Join<b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("As a Supplier", "Supplier", "Join")</li>
                <li>@Html.ActionLink("As a Travel Agent", "TravelAgent", "Join")</li>
                <li>@Html.ActionLink("As a Corporate", "Corporate", "Join")</li>
            </ul>
        </li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
