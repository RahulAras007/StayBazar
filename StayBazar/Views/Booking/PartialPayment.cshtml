        $('#ZipCode').html($("#ZipCode_" + id).html());
        var url = '@Url.Action("UpdateBooking", "Booking")';
        $.post(url, { ForBookingUserId: ForBookingUserId });
    }
    $(function () {
        $("#paypalsub").click(function () { $("#psub").submit(); });
    });
</script>
