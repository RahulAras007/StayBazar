<script type="text/javascript">

    var cancelpopup = false;
    function proceed(BId) {
        var IsPartialPay = true;
        cancelpopup = true;
        // window.location = "Url.Action("Index","Payment")";
        window.location = "/Payment/Index?IsPartialPay=" + IsPartialPay + "&BookId=" + BId;
