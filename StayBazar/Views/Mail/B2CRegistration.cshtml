@model long
@{
    Layout = null;
    CLayer.User usr = BLayer.User.Get(Model);
    if (usr == null){ usr = new CLayer.User();}
    string token = BLayer.User.GetToken(Model);
    string url = Request.Url.ToString().Replace("Mail","Account").Replace("B2CRegistration","Verify");
    int idx = url.IndexOf("?");
    if(idx>0)
    {
        url = url.Substring(0, idx);
    }
    url = url + "?token=" + token;
    //.Replace("Register", "Verify").ToString() + "?token=" + token; ;
}
