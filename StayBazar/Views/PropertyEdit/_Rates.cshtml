@model StayBazar.Models.PropertyRatesModel
@try
{
    using (Html.BeginForm("RateSave", "PropertyEdit"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.PropertyId)
        <div class="form-group">
            @Html.LabelFor(m => m.DailyRate)<span style="color:red">*</span>
            @Html.TextBoxFor(m => m.DailyRate, new { @tabindex = "1", @class = "form-control input-sm" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.RateForIndividual)<span style="color:red">*</span>
            @Html.TextBoxFor(m => m.RateForIndividual, new { @tabindex = "2", @class = "form-control input-sm" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MonthlyRate)<span style="color:red">*</span>
            @Html.TextBoxFor(m => m.MonthlyRate, new { @tabindex = "3", @class = "form-control input-sm" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WeeklyRate)<span style="color:red">*</span>
            @Html.TextBoxFor(m => m.WeeklyRate, new { @tabindex = "4", @class = "form-control input-sm" })
        </div>
        if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                @ViewBag.Message
            </div>
        }
        <div class="btn-toolbar">
            <div class="btn-group">
                <input type="submit" id="btnSave" value="Save" class="btn btn-default" tabindex="5" />
                <a href="~/PropertyEdit/Rates/@Model.PropertyId" id="btnReset" class="btn btn-danger" tabindex="6">Cancel</a>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $("#DailyRate").focus();
            });
        </script>
    }
}
catch (Exception ex)
{
    StayBazar.Common.LogHandler.HandleError(ex);
    Response.Redirect("~/ErrorPage");
}


