@model StayBazar.Areas.Admin.Models.OfflineBookingModel
@{
    Layout = null;
}


<style>
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }
</style>


@if (Model.OfflineBookingList != null)
{
    <div class="row" style="text-align:center;">
        <h3>Supplier Invoice Pending Report</h3>
    </div>
    <div class="col-md-12" style="overflow:auto;">
        <table style="width:100%;" class="table table-hover table-condensed table-responsive table-striped table-custom">
            <thead>
                <tr>
                    <th>Booking Date</th>
                    <th>Booking ID</th>
                    <th>Supplier Name</th>
                    <th>Property Name</th>
                    <th>Property City</th>
                    <th>Customer Name</th>
                    <th>Check-in Date</th>
                    <th>Check-out Date</th>
                    <th>No of Rooms</th>
                    <th>Guest Name</th>
                    <th>Supplier value</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OfflineBookingList.Count() > 0)
                {
                    foreach (var item in Model.OfflineBookingList)
                    {
                        <tr>
                            <td>
                                @if (item.BookingDate != null && item.BookingDate != DateTime.MinValue.ToShortDateString())
                                {
                                    @Convert.ToDateTime(item.BookingDate).ToShortDateString()
                                }
                            </td>
                            <td>@item.ConfirmationNumber </td>
                            <td>@item.SupplierName</td>
                            <td>@item.PropertyName</td>
                            <td>@item.City</td>
                            <td>@item.CustomerName</td>
                            <td>
                                @if (item.CheckIn != null && item.CheckIn != DateTime.MinValue)
                                {
                                    @Convert.ToDateTime(item.CheckIn).ToShortDateString()
                                }
                            </td>
                            <td>
                                @if (item.CheckIn != null && item.CheckIn != DateTime.MinValue)
                                {
                                    @Convert.ToDateTime(item.CheckIn).ToShortDateString()
                                }
                            </td>
                            <td style="text-align:right;">@item.NoOfRooms</td>
                            <td>@item.GuestName</td>
                            <td style="text-align:right;">@item.TotalBuyPrice</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>



}

