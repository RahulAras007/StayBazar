@model List<CLayer.ReportDailyPropertyBooking>
@{
    Layout = null;
    StayBazar.Lib.GridPager gp = new StayBazar.Lib.GridPager();
    gp.JavascriptFuncName = "showPager";
    gp.ColumnsInPager = 8;
    gp.RowsInAPage = 25;
    long i = 0;
}


<div class="row margin10px">
    <div class="col-md-12">
        <div>

            @if (Model.Count > 0)
            {
    <!--START-->

<div><h2>Booking Review Abort List</h2></div>
                <div>&quot;List of customers who went up to Booking Review page and exited without booking completion&quot;</div>                <table width="100%" class="table table-bordered table-hover table-striped">
                    <thead style="background-color:whitesmoke">
                        <tr>
                            <th>Property Name</th>
                            <th>Property City</th>
                         
                            <th>Customer Name</th>
                            <th>Customer Email</th>
                            <th>Customer Mobile No</th>
                            <th>Booking Category</th>
                            <th>Rate Type</th>
                            <th>Accomodation Type</th>
                            <th>Checkin Date</th>
                            <th>Checkout Date</th>
                            <th>Total Booking Amount</th>
                            <th>Date Booked</th>
                           
                        </tr>
                    </thead>
                    @foreach (CLayer.ReportDailyPropertyBooking reportList in Model)
                    {

                        if (reportList.BookingId == 0)
                        {
                            <tr>
                                <td colspan="6">
                                    <div class="alert alert-info">Records not found.</div>
                                </td>
                            </tr>
                        }
                        else
                        {                           
                            i = reportList.AccomodationId;
                            <tbody>
                                <tr>                                  
                                    <td>@reportList.PropertyName</td>
                                    <td>@reportList.PropertyCity</td>                                  
                                    <td>@reportList.CustomerName</td>
                                    <td>@reportList.CustomerEmail</td>
                                    <td>@reportList.CustomerPhone</td>
                                    <td>@reportList.BookingCategory</td>
                                    <td>@reportList.RateType</td>
                                    <td>@reportList.AccomodationType</td>
                                    <td>@reportList.Checkindate.ToShortDateString()</td>
                                    <td>@reportList.CheckoutDate.ToShortDateString()</td>
                                    <td align="center">@reportList.TotalbookingAmount</td>
                                    <td>@reportList.BookingDate.ToShortDateString()</td>
                                   
                                </tr>

                            </tbody>


                        }
                    }
                </table>

    <!--END-->
            }
            else
            {

                <text><div class="row"><div class="col-md-4 col-md-offset-3">No bookings for the selected property for date period</div></div></text>

            }
        </div>
    </div>
</div>
