@model StayBazar.Areas.Admin.Models.StaticPageModel
@{
    if (Model.PageId == 0)
    { ViewBag.Title = "New Static Page"; }
    else { ViewBag.Title = "Edit Static Page"; }
}
@*<div class="page-title-container style3">*@
    <div class="row">
        @*<div class="col-md-1">
                <a href="/Admin/StaticPage/Index" class="btn btn-sm btn-default" title="back to list"><span class="glyphicon glyphicon-arrow-left"></span></a>
            </div>*@
        <div class="col-md-12">

            @if (Model.PageId == 0)
            {
                <h2><a href="/Admin/StaticPage/Index" class="btn btn-sm btn-default" title="back to list"><span class="glyphicon glyphicon-arrow-left blue-color fa-2x"></span></a> New Static Page</h2>
            }
            else
            { <h2><a href="/Admin/StaticPage/Index" class="btn btn-sm btn-default" title="back to list"><span class="glyphicon glyphicon-arrow-left blue-color fa-2x"></span></a> Edit Static Page</h2>}
            <hr />

        </div>
    </div>
@*</div>*@
<br />
<br />
@using (Html.BeginForm("Save", "StaticPage", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="container-fluid">
    <div class="panel">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City, new { @class = "form-control input-sm" })
                @Html.HiddenFor(m => m.PageId)
                @Html.HiddenFor(m => m.Image)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Location)
                @Html.TextBoxFor(m => m.Location, new { @class = "form-control input-sm" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PageTitle)
                @Html.TextBoxFor(m => m.PageTitle, new { @class = "form-control input-sm" })
            </div>

            @*<div class="form-group">
                    @Html.LabelFor(m => m.FileName)<span style="color:red">*</span>
                    @Html.TextBoxFor(m => m.FileName, new { @class = "form-control input-sm" })
                    <h6 class="greentext">eg:Index.html</h6>
                    @Html.ValidationMessageFor(m => m.FileName)
                </div>*@
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.RootFolder)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.RootFolder, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(m => m.RootFolder)
            </div>
            <div class="form-group">
                @*@Html.LabelFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-sm" })*@
                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ShowInWidget)
                @Html.CheckBoxFor(m => m.ShowInWidget, new { @class = "marginleft10" })
            </div>
            <div class="form-group">
                <div class="col-md-5 padding10px">
                    <label for="ImageFile">Image File</label>
                    <input type="file" name="ImageFile" id="ImageFile" />
                </div>
                <div class="col-md-5">
                    <div>
                        @if (File.Exists(Server.MapPath("~/Files/SEO/" + Model.Image)))
                        {
                            <div class="img-thumbnail">
                                <img src="~/Files/SEO/@Model.Image" alt="ImageFile" class="img img-responsive" />
                            </div>
                        }
                    </div>
                </div>

            </div>
            @Html.HiddenFor(m => m.FileName)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-offset-3 col-md-2">
            <input type="submit" class="btn btn-info" value="Save" />
        </div>
    </div>
    </div>
</div>
}
<div class="row height10px">

</div>