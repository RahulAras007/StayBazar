@model List<StayBazar.Areas.Admin.Models.StaticPageStatus>
@{
   ViewBag.Title = "Page save status";
}
<div class="row">
    <div class="col-md-6"><h2>Static File Save Status</h2><br /><a href="@Url.Action("Index","StaticPage")">Back to List</a></div>
</div>
@if(ViewBag.ErrorMessage !=null && ViewBag.ErrorMessage !="")
{
    <div class="row">
        <div class="col-md-5 col-md-offset-2"><div class="alert alert-info">@ViewBag.ErrorMessage</div></div>
    </div>
}else{
    
    if(Model.Count ==0)
    {
        <div class="row">
            <div class="col-md-5 col-md-offset-2">
                <div class="alert alert-info">Files not generated!!</div>
            </div>
        </div>
    }
    else { 
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Page</th>
                <th>Generated</th>
                <th>Remarks</th>
            </tr>

        </thead>
        <tbody>
            @foreach (StayBazar.Areas.Admin.Models.StaticPageStatus item in Model)
            {
                <tr>
                    <td>@item.Page</td>
                    <td>@if(item.IsGenerated){ <span class="fa fa-check greentext"></span> } else { <span class="fa fa-times redtext"></span> }</td>
                    <td>@item.ErrorMessage &nbsp;</td>
                </tr>
            }
        </tbody>

    </table> 
}
    
}