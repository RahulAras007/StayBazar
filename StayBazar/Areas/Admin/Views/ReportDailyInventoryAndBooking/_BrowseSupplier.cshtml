@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-8">
        <div class="input-group">
            <input type="text" id="searchCorp" class="form-control">
            <span class="input-group-btn">
                <button class="btn btn-default" onclick="findCorporate()" type="button">Go!</button>
            </span>
        </div><!-- /input-group -->
    </div>
</div>
<div class="row top-margin-10px" id="browseList">
    @Html.Partial("_SupplierList", new List<CLayer.B2B>())
</div>
<script type="text/javascript">
    function findCorporate()
    {
        if($("#searchCorp").val().trim() == "")
        {
            alert('Search criteria not found!');
            return;
        }
        var cname = $("#searchCorp").val();
        $.post('@Url.Action("Search", "Supplier", new { area = "Admin" })', { name: cname },function (data){
            $("#browseList").html(data);
        });
    }
