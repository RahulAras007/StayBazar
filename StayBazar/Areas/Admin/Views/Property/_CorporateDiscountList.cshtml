@model List<CLayer.Discount>
@{
    Layout = null;
}
<div class="col-lg-12">
    @if (Model.Count > 0)
    {

        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>Corporate</th>
                    <th>Short Term Rate</th>
                    <th>Long Term Rate</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CLayer.Discount item in Model)
                {
                    <tr>
                        <td>@item.B2BName</td>
                        <td>@item.ShortTermRate</td>
                        <td>@item.LongTermRate</td>
                        <td><a href="#" onclick="editDiscount(@item.PropertyId,@item.B2BId)"><span class="glyphicon glyphicon-edit"></span></a></td>
                        <td><a href="#" onclick="remDiscount(@item.PropertyId,@item.B2BId,'@item.B2BName')"><span class="glyphicon glyphicon-trash"></span></a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">Discounts are not yet configured for this property</div>
    }
</div>
