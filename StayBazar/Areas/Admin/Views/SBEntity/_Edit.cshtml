@model StayBazar.Areas.Admin.Models.SBEntityModel
@{
    Layout = null;

}
@using (Html.BeginForm("Save", "SBEntity"))
{
    @*<h2>SB Entities</h2>*@
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @*<div class="incontainer">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">*@
<div class="page-title-container style3">
    <div class="row">
        <div class="col-md-2">
            <h2 style="color:white">@ViewBag.Title</h2>
        </div>
        <div class="col-md-1">
            @Html.DisplayNameFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="col-md-2">
            @*<div class="form-group">*@
            @Html.DisplayNameFor(m => m.GSTState)
            @Html.DropDownListFor(m => m.GSTState, Model.States, "Select state", new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(m => m.GSTState)
        </div>
        @*<div class="form-group">*@
        <div class="col-md-1">
            @Html.DisplayNameFor(m => m.GSTNo)
            @Html.TextBoxFor(m => m.GSTNo, new { @class = "form-control input-sm" })
            @Html.ValidationMessageFor(m => m.GSTNo)
        </div>
        @*</div>*@
        @*<div class="col-md-6">
        <div class="form-group">*@
        <div class="col-md-2">
            @Html.DisplayNameFor(m => m.Address)
            @Html.TextAreaFor(m => m.Address, new { @class = "form-control input-sm" })
        </div>
        @*<div class="form-group">*@
        <div class="col-md-1">
            Country
            <input type="text" disabled="disabled" value="India" class="form-control input-sm" />
        </div>

        @*<div class="form-group">*@
        <div class="col-md-1">
            @Html.DisplayNameFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control input-sm" })
        </div>
        @*</div>*@
        @*</div>*@
        <br />
        <div class="col-md-2">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <input type="submit" id="btnSave" value="Save" class="btn btn-success" tabindex="3" />
                    <a href="/Admin/SBEntity" id="btnReset" class="btn btn-danger" tabindex="4">Cancel</a>
                </div>
            </div>
        </div>
    </div>
    </div>
    <br />
    <br />
        @Html.HiddenFor(m => m.EntityId)

        }
