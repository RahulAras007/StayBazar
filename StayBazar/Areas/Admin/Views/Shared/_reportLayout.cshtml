</head>
<body>
    <table width="100%">
        <tr>
            <td>
                <div id="wtopbar" class="navbar-wrapper whitebg">
                    <div class="navbar navbar-inverse bluebg" role="navigation">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                @Html.Partial("_Menu")
                            </div>
                        </div>
                    </div>

                </div>
            </td>
        </tr>
        <tr>
            <td>

                <div id="bdycontar" class="container-fluid ">
                    <div id="bodybox">
                        @RenderBody()
                    </div>
                </div>
            </td>
        </tr>
    </table>
        <script type="text/javascript">
            $(window).resize(function () {
                wrapperadj();
            });

            wrapperadj();

            function wrapperadj() {
                //$(".wrapper").css("margin-top", $(".navbar-wrapper").innerHeight());
                $("#wbodycontent").css("margin-top", "0px");
            }
            $.ajaxSetup({
                cache: false
            });
        </script>
</body>
</html>
