@model StayBazar.Areas.Admin.Models.PropertyDetailsReportModel
@{
    ViewBag.Title = "Report City Wise Statistics";
   // Layout = "~/Areas/Admin/Views/Shared/_reportLayout.cshtml";
}
<div id="content">
    <div class="page-title-container style3">


        <div class="row">
            <div class="col-md-4">
                <h2 style="color:white">@ViewBag.Title</h2>
            </div>
        @*</div>
    
        <div class="row">*@

            <div class="col-md-6 exporticons col-md-offset-2">
                <a title="Print" href="#" onclick="printDoc();" id="btnNextClick" class="fa fa-print white-color fa-2x"> </a>
                <a title="Pdf" href="#" onclick="PDF();" id="btnNextClick" class="fa fa-file-pdf-o"></a>
                <a title="Export" href="#" onclick="Export();" id="btnNextClick" class="fa fa-file-excel-o"></a>
            </div>
        </div>
        <div class="col-md-6">
            @if (Model != null)
            {
                @Html.Partial("Pdf", Model.propertyDetails)
            }
        </div>
    </div>

</div>
<script type="text/javascript">
    $(".container").removeClass("container").addClass("container-fluid");
    function printDoc() {
        var url = '@Url.Action("ReportPrint", "CityWiseStatistics")';
        window.open(url, "_blank", " scrollbars=yes, resizable=yes, width=400, height=400");
    }
    function PDF() {
        var url = '@Url.Action("ReportPdf", "CityWiseStatistics")';
        window.open(url, "_blank", " scrollbars=yes, resizable=yes, width=400, height=400");
    }
    function Export() {
        window.location = '@Url.Action("ExcelExport", "CityWiseStatistics", new { area = "Admin" })';
    }

</script>

