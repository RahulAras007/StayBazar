@model StayBazar.Areas.Admin.Models.RoomFeatureModel
@{
    Layout = null;
}
@using (Html.BeginForm("Edit", "RoomFeature"))
{
    <h2>Room Feature</h2>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.DisplayNameFor(m => m.RoomType)
        @Html.DropDownListFor(m => m.RoomTypeId, Model.RoomType, new { @tabindex = "1", @class = "form-control input-sm" })
    </div>
    <div class="form-group">
        @Html.DisplayNameFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @tabindex = "2", @class = "form-control input-sm" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    <div class="btn-toolbar">
        <div class="btn-group">
            <input type="submit" id="btnSave" value="Save" class="btn btn-default" tabindex="3" />
            <a href="~/Admin/RoomFeature" id="btnReset" class="btn btn-danger" tabindex="4">Cancel</a>
        </div>
        @*<div class="bottom">&nbsp;</div>*@
    </div>
    @Html.HiddenFor(m => m.RoomFeatureId)
    <script type="text/javascript">
        $(function () {
            $("#Title").focus();
        });
    </script>
}


