<div class="page-title-container style3">
    <div class="row">
        <div class="col-md-3">
            <h2 style="color:white">@ViewBag.Title</h2>
        </div>
            <div class="col-md-2">
                @using (Html.BeginForm("Filter", "OfflineBookingCustomerList", FormMethod.Post, new { @id = "frmFilters" }))
                {
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.SearchString, new { @tabindex = "2", @class = "form-control" })
                        <span class="input-group-btn">
                            <button id="btnSearch" class="btn btn-default" type="submit" tabindex="3">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                }
            </div>
            <div class="col-md-1 col-md-offset-6 rightalign"><a href="/Admin/OfflineBookingCustomerList/CreateCustomer" class="btn btn-success">Add New</a></div>

        </div>

    </div>

