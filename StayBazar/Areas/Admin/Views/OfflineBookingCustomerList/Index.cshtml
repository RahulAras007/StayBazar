<script>
    function showPager(num) {
        $("#currentPage").val(num);
        var url = '@Url.Action("Pager", "OfflineBookingCustomerList")';
        $.post(url, $("#frmPagers").serialize(),
                function (data) {
                    $("#Customerlist").html(data);
                });
    }
</script>







