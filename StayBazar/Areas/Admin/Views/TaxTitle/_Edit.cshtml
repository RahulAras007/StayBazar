@model StayBazar.Areas.Admin.Models.TaxTitleModel
@{
    Layout = null;
}
@using (Html.BeginForm("Editdata1", "TaxTitle", new { area = "Admin" }))
{
    @*<h2>Tax Title</h2>*@
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @*<div class="incontainer">
        <div class="form-group">*@
    <div class="page-title-container style3">
        <div class="row">
            <div class="col-md-3">
                <h2 style="color:white">@ViewBag.Title</h2>
            </div>
            <div class="col-md-3">
                @Html.DisplayNameFor(m => m.Title)<span style="color:red">*</span>
                @Html.TextBoxFor(m => m.Title, new { @tabindex = "1", @class = "form-control input-sm" })
                @Html.ValidationMessageFor(m => m.Title)
                </div>
            <br />
                <div class="col-md-3">
                    @Html.RadioButtonFor(m => m.Status, (int)CLayer.ObjectStatus.StatusType.Active)Active
                    @Html.RadioButtonFor(m => m.Status, (int)CLayer.ObjectStatus.StatusType.Disabled)Disable
                </div>
            @*</div>*@
                @*<br />*@
                <div class="col-md-3">
                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <input type="submit" id="btnSave" value="Save" class="btn btn-success" tabindex="3" />
                            <a href="~/Admin/TaxTitle/Index" id="btnReset" class="btn btn-danger" tabindex="4">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
    @Html.HiddenFor(m => m.TaxTitleId)
    <script type="text/javascript">
        $(function () {
            $("#Title").focus();
        });
    </script>
}


