@model StayBazar.Areas.Admin.Models.LandmarkTitlesModel
@{
    Layout = null;
}
@using (Html.BeginForm("Edit", "LandmarkTitles"))
{
    <h2>Landmark Titles</h2>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="incontainer">
        <div class="form-group">
            @Html.LabelFor(m => m.LandmarkTitle)
            @Html.TextBoxFor(m => m.LandmarkTitle, new { @tabindex = "1", @class = "form-control input-sm" })
            @Html.ValidationMessageFor(m => m.LandmarkTitle)
        </div>
    </div>
    <div class="btn-toolbar">
        <div class="btn-group">
            <input type="submit" id="btnSave" value="Save" class="btn btn-default" tabindex="6" />
            <a href="~/Admin/LandmarkTitles" id="btnReset" class="btn btn-danger" tabindex="7">Cancel</a>
        </div>
    </div>
    @Html.HiddenFor(m => m.LandmarkTitleId)
    <script type="text/javascript">
        $(function () {
            $("#LandmarkTitle").focus();
        });
    </script>
}


