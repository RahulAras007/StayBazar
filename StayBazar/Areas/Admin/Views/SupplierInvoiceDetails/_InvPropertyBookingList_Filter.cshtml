@model StayBazar.Areas.Admin.Models.SuppierInvoiceModel
@{
    Layout = null;
}









<div class="col-md-12">

    @using (Html.BeginForm("getInvPropertyBookingList", "SupplierInvoiceDetails", FormMethod.Get, new { @id = "frmFiltersSupplierInvoiceBooking" }))
    {
        <div class="row">
            <div class="col-md-6" style="padding:0;">
                <div class="col-md-12">
                    <div class="input-group">
                        @Html.HiddenFor(m => m.searchTypeBooking)
                        @Html.TextBoxFor(m => m.searchTextBooking, new { @class = "form-control" })
                        <span class="input-group-btn">
                            <button id="btnSearchBooking" onclick="onClickFilterInvBookingList();" class="btn btn-default" type="button" tabindex="3">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div>
                </div>
                <div class="col-md-9">
                    &nbsp;
                </div>
            </div>
            <div class="col-md-6" style="padding:0;">
                <div class="col-md-12">
                    <div class="input-group ">
                        <div class="form-control">
                            @foreach (StayBazar.Areas.Admin.Models.SuppierInvoiceModel.SearchTypeValuesForBookingList ruv in (StayBazar.Areas.Admin.Models.SuppierInvoiceModel.SearchTypeValuesForBookingList[])Enum.GetValues(typeof(StayBazar.Areas.Admin.Models.SuppierInvoiceModel.SearchTypeValuesForBookingList)))
                            {
                                if (ruv.ToString() == "BookingReffNo")
                                {
                                    <input type="radio" name="ruvBooking" class="css-radiobutton" value="@((int)ruv)" id="@((int)ruv)" @if ((int)ruv == 1) { <text> checked </text>                        } />
                                    <label for="@((int)ruv)" class="css-label">Booking Reff:No</label>
                                    <text>&nbsp;&nbsp;</text>
                                }
                                else
                                {
                                    <input type="radio" name="ruvBooking" class="css-radiobutton" value="@((int)ruv)" id="@((int)ruv)" @if ((int)ruv == 1) { <text> checked </text>                         } />
                                    <label for="@((int)ruv)" class="css-label">@ruv.ToString()</label>
                                    <text>&nbsp;&nbsp;</text>
                                }
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

</div>


