@model StayBazar.Areas.Admin.Models.InventoryModel
    @{
      Layout=null;
       }

<div class="col-lg-12">
    @using (Html.BeginForm("Save", "Inventory", new { area = "Admin" }))
    {

        <div class="row">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.InventoryId)
            @Html.HiddenFor(m => m.AccommodationId)
            <div class="col-lg-3">
                Start Date: Month @Html.DropDownListFor(m => m.StartMonth, Model.Months) Day @Html.DropDownListFor(m => m.StartDay, Model.DaysInMonth)
            </div>
            <div class="col-lg-3">
                End Date: Month @Html.DropDownListFor(m => m.EndMonth, Model.Months) Day @Html.DropDownListFor(m => m.EndDay, Model.DaysInMonth)
                @Html.HiddenFor(m => m.AccommodationId)
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group ">
                    @Html.LabelFor(m => m.Quantity)
                    @Html.TextBoxFor(m => m.Quantity, new { @tabindex = "2", @class = "form-control input-sm" })
                    @Html.ValidationMessageFor(m => m.Quantity)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="btn-toolbar ">
                    <div class="btn-group">
                        <input type="submit" id="btnSave" value="Save" class="btn btn-default" tabindex="5" />
                        <a href="~/Admin/Inventory/Index/@Model.AccommodationId" id="btnReset" class="btn btn-danger" tabindex="6">Cancel</a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
